<Window x:Class="dentis_Add_Edit_Delete.deleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dentis_Add_Edit_Delete"
        mc:Ignorable="d"
        Title="deleteWindow" Height="400" Width="600">
    <Grid>
        <StackPanel>
            <Label Content="Delete Confirmation" HorizontalAlignment="Left" Height="74" Margin="135,90,0,0" VerticalAlignment="Top" Width="344" FontSize="35"/>
            <Label Content="Are you sure you want to delete it?" HorizontalAlignment="Left" Height="43" Margin="180,0,0,0" VerticalAlignment="Center" Width="242" FontSize="15"/>
        </StackPanel>

        <Button Content="Cancel" HorizontalAlignment="Left" Margin="400,271,0,0" VerticalAlignment="Top" Height="43" Width="79" FontSize="20" Name="btnDeleteCancel"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="135,271,0,0" VerticalAlignment="Top" Height="43" Width="79" FontSize="20" Name="btnDeleteConfirm"/>
    </Grid>
</Window>
